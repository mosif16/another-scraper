{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node", "express"],
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "include": [
    "server.ts",
    "public/**/*.ts",
    "public/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
